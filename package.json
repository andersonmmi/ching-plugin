{
  "homepage": "http://andersonmmi.github.io/ching-plugin",
  "name": "ching-plugin",
  "description": "Allows burner wallet to transact with Ching Point of Sale",
  "author": "David Mihal <david@dmihal.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "install": "lerna bootstrap",
    "build": "lerna run --ignore local-wallet --ignore basic-wallet build",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "start-basic": "lerna run --parallel start-basic",
    "start-local": "lerna run --parallel start-local",
    "predeploy": "lerna run --ignore local-wallet build",
    "gh-deploy": "gh-pages -d build"
  },
  "workspaces": [
    "basic-wallet",
    "local-wallet",
    "ching-plugin"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.16.0",
    "lerna": "^3.16.4"
  },
  "dependencies": {
    "gh-pages": "^2.2.0",
    "typescript": "^3.6.3"
  }
}
